<h1>Quotes</h1>
<div class="row">
  {{#each quotes}}
    <div class="col s12 m4">
      
      <div class="card" style="display: flex; flex-direction: column; margin: 1rem">
        <span>
          <img 
          style="position: relative; top: -1rem; left: -1rem;"
          src="../../quote left.png" 
          alt="quote left"
          >
        </span>
        <div class="card-image">
          {{{editIcon user ../user _id}}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <p>{{stripTags (truncate body 100)}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}" alt="">
            <a href="/quotes/user/{{user._id}}">{{user.displayName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href="/quotes/{{_id}}" class="btn red">Read More</a>
        </div>
        <span style="display: flex; justify-content: flex-end;">
          <img 
          style="position: relative; bottom: -1rem; right: -1rem;"
          src="../../quote right.png" 
          alt="quote left"
          >
        </span>
      </div>
    </div>
  {{else}}
    <strong>No Quotes to display</strong>
  {{/each}}
</div>