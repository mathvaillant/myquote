<h6>Dashboard</h6>
<h3>Welcome {{name}} <img style="width: 5rem; border-radius: 50%; border: 1px solid rgba(0, 0, 255, 0.459); " src="{{image}}" alt=""></h3>

<p>Here are your latest quotes</p>
{{#if quotes}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each quotes}}
        <tr>
          <td><a href="/quotes/{{_id}}">{{title}}</a></td>
          <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm a'}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a href="/quotes/edit/{{_id}}" class="btn btn-float">
              <i class="fas fa-edit"></i>
            </a>
            <form action="/quotes/{{_id}}" method="POST" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn red">
                <i class="fas fa-trash"></i>
              </button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <strong>You have not created any quotes yet</strong>
{{/if}}